#include <iostream>
using namespace std;

void mainMenu(){
	cout << "=====================" << endl;
	cout << " OPERATION ELEMENTS" << endl;
	cout << "1. Create Element" << endl; 
	cout << "2. Edit Element" << endl;
	cout << "3. View Element" << endl;
	cout << "4. Delete Element" << endl;
	cout << "=====================" << endl;
}

int main(){
	int choice, element, cont[element], y;
	bool tAgain = true;
	char cho;
	
	again:
	mainMenu();
	cin >> choice;
	switch(choice){
		case(1):
		{
			cout << "1. Create Element" << endl << endl;
			cout << "Enter number of Element: ";
			cin >> element;
	
			for(int i = 0; i<element; i++){
			cin >> cont[i];
			}
		
			cout << "You want go back to the main menu? [Y/N]";
			cin >> cho;
			if(cho == 'Y'||cho == 'y'){
				system("cls");
				goto again;
			}
			else{
				system("cls");
				cout << "system is now terminated";
			}
		break;
		}
		case(2):
		{
			cout << "2. Edit Element" << endl << endl;
			cout << "Enter element number you want to edit: ";
			cin >> element;
			
			cout << "Input new content for element " << element << endl;
			cin >> y;
			cont[element-1] = y;
			
			cout << "You want go back to the main menu? [Y/N]";
			cin >> cho;
			if(cho == 'Y'||cho == 'y'){
				system("cls");
				goto again;
			}
			else{
				system("cls");
				cout << "system is now terminated";
			}
		break;	
		}
		case(3):
		{
			cout << "3. View Element" << endl;
			for(int i = 0; i<element; i++){
			cout << cont[i];
			}
			
			cout << "You want go back to the main menu? [Y/N]";
			cin >> cho;
			if(cho == 'Y'||cho == 'y'){
				system("cls");
				goto again;
			}
			else{
				system("cls");
				cout << "system is now terminated";
			}
		break;	
		}
		case(4):
		{
			cout << "4. Delete Element" << endl;
			
		break;	
		}
	}
	if(choice <=0||choice > 4){
		system("cls");
		goto again;
	}
}

